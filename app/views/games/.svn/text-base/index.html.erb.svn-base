

	<!-- Profile File Include --><%#= javascript_include_tag "Profile" %>
    <div class="clear"></div>

    <!-- Container Start -->
    <div class="content">
    	<!-- Left Col Start -->
      <div class="c1">
 
            <!-- Blue Box start -->
            <div class="Blue4pxbox"><code>$(this).corner();</code>
                <div class="whiteBoxContent">
                <!-- Design Central Start -->
                	<!-- Section Head start -->
					<div class="pageheading">
                      <div class="c1 head14">
                        <%if @search_text%>
                            Search results for "<%=@search_text%>"
                        <%else%>
                            Games
                        <%end%>
                        
                      </div>
                      <div class="c5 total">
                        <%@title_search="Search Games"%>
                          <%@type="games"%>
                          <%=render :partial=>"designs/search"%>
                      </div>
                    </div>
                    <p class="clear brdBot01"></p>
                    <div class="pageheading">
                        <p class="c1 total">Total Games : <%=@games.total_entries%></p>
                        <p class="c3"><span id="pagination" class="pagination01"></span></p>
                    </div>
                    <%if @no_of_pages >= 2%>
                         <script type="text/javascript">
                             $(document).ready(function(){
                        $(function(){
                            $("#pagination").paginate({
                                <%if @search_text%>
                                   href : '/games?search=<%=@search_text%>&page=',                 
                                <%else%>
                                  href : '/games?page=',   
                                <%end%>
                                count: <%=@no_of_pages%>,
                                start: <%=params[:page] || 1%>,
                                display: 5,
                                border: false,
                                text_color: '',
                                background_color: '',
                                text_hover_color: '',
                                background_hover_color: ''
                            });
                        });
                        $(function(){
                            $("#pagination_bottom").paginate({
                                <%if @search_text%>
                                   href : '/games?search=<%=@search_text%>&page=',
                                <%else%>
                                  href : '/games?page=',
                                <%end%>
                                count: <%=@no_of_pages%>,
                                start: <%=params[:page] || 1%>,
                                display: 5,
                                border: false,
                                text_color: '',
                                background_color: '',
                                text_hover_color: '',
                                background_hover_color: ''
                            });
                        });
                         });
                    </script>
                <%end%>
                    <p class="clear brdBot01"></p>
                	<!-- Section Head End -->

                <!-- Two col comment start -->
                <% unless @games.length == 0 %>
                <% @games.each do |g| %>
                <%= render :partial => "game",:locals => {:g => g},:inline=>true %>
                <% end %>
                <% else %>
                No games found<% end %>
                <!-- Two col comment end -->
                
                <p class="clear"></p>
                <!-- Design Central End -->
                  <div class="pageheading">
                    <p class="c1 total" id="disign_filter">
                    <p class="c3">
                      <span id="pagination_bottom" class="pagination01"></span>
                    </p>
                    </p>
                    </div>
                   <p class="clear brdBot01">
                    </p>
            <p class="spacer01">
          </p>
                </div>
            </div>
            <!-- Blue Box end -->
			<div class="spacer"></div>
        </div>
    	<!-- Left Col End -->
    	<!-- Right Col Start -->
        <div class="c2 rightcol" id="rightcol_games">
          <%=render :partial=>"games/right_col"%>
        </div>
    	<!-- Right Col End -->
    </div>
    <!-- Container End -->
    <div class="clear"></div>

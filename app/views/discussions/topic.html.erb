    	        function decrement_counter(id){ 
        $('#counter_' + id ).show();
                             seconds[id] -= 1
        					   var min = parseInt(seconds[id] / 60);
        					   var sec = seconds[id] % 60;
        						sec = sec > 9 ? sec : '0' + sec;					   
                               $('#counter_display_' + id).html(min + ":" + sec)
        					   

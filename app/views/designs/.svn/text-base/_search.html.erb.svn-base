<script>
function searcheck(){
            if($('#s').val() == "")
            {
            show_notice('Search text can not be blank.','error')
            return false;
            }
    }
</script>
<div id="search_box">
  <form action="/<%=@type%>" method="post" id="search_form">
    <%unless @title_search.nil?%>
      <input type="text" class="swap_value" value="<%=@title_search%>" id="s" name="search">
    <%else%>
      <input type="text" class="swap_value" value="Search" id="s" name="search">
    <%end%>
    <%=hidden_field_tag 'category_id', params[:category_id]%>
    <input type="image" height="20" width="18" title="Search" alt="Search" id="go" onclick="return searcheck();" src="/images/btn_search_box.gif">
  </form>
</div>
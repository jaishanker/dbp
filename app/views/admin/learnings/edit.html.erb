<%= render :partial => "top_nav" %>
<!-- Blue Box start -->
<div class="Blue4pxbox">
    <code>
        $(this).corner();
    </code>
    <div class="profileForm">
        <!-- Page Head start -->
        <div class="pageheading">
            <div class="c1 head14">
                Edit Learning Material
            </div>
        </div>
        <!-- Page Head end -->
        <div class="brdBot01">
        </div>
        <!-- Form Start --><p class="spacer04"/><% form_for(@learning,:url => {:controller=>"admin/learnings",:action => :update,:permalink => @learning.permalink},:html => {:multipart => true}) do |f| %>
        <%= error_messages_for :learning,:header_message => nil,:message => nil %>
        <div class="uplooad">
            <div class="formrow">
                <p class="c1">
                    Category:
                </p>
                <p class="c2">
                    <%= f.select :category_id, LearningCategory.all_active.map{|c| [c.name,c.id]} %>
                </p>
            </div>
            <div class="formrow">
                <p class="c1">
                    Title:
                </p>
                <p class="c2">
                    <%= f.text_field :title, :class => "inputtxt04" %>
                </p>
            </div>
            <div class="formrow">
                <p class="c1">
                    Description:
                </p>
                <p class="c2">
                    <%= f.text_area :description, :class => "inputtxt04",:rows => 8 %>
                </p>
            </div>
            <div class="formrow">
                <p class="c1">
                    Embed code:
                </p>
                <p class="c2">
                    <%= f.text_area :embed_code, :class => "inputtxt04",:rows => 8 %>
                </p>
            </div>
            <div class="formrow">
                <p class="c1">
                    Upload Display Image:
                </p>
                <p class="c2">
                    <%= file_field_tag :photo,:class => "inputtxt01 file" %>
                </p>
            </div>
            <div class="formrow" id = "upload_material">
                <p class="c1">
                    Upload Material 1:
                </p>
                <p class="c2">
                    <%= file_field_tag "attachment[]",:class => "inputtxt04 file" %>
                </p>
			</div>
            <div class="formrow" id = "upload_material">
                <p class="c1">
                    Upload Material 2:
                </p>
                <p class="c2">
                    <%= file_field_tag "attachment[]",:class => "inputtxt04 file" %>
                </p>
			</div>
            
			<div class="formrow">
                <p class="c1">
                    Tags:
                </p>
                <p class="c2">
                    <%= f.text_area :tags, :class => "tagbox inputtxt04 ",:autocomplete => "off" %>
                </p>
            </div>
            <div class="formrow">
                <p class="c1">
                    &nbsp;
                </p>
                <p class="c2">
                    <%= submit_tag "Submit",:class => "grnbtn01" %>
                </p>
            </div>
            <% end %>
        </div>
        <!-- Form End -->
    </div>
</div>

<!-- Container Start -->
<div class="content">
    <%= render :partial => "top_nav" %>
    <h1>Members - Generic Report</h1>
    <form id="form1" name="form1" method="post" action="/admin/members/member_report">
        <table border="0" cellpadding="5" cellspacing="0" id="mytable01">
            <tr>
                <td colspan="2">
                    <ul class="admtot">
                        <li>
                        	Total Members : <%= User.count %>
                        </li>
                    </ul>
                </td>
            </tr>
            <tr>
                <td width="6%">
                    Select
                </td>
                <td width="94%">
                    <select name="duration" id="select" class="select01">
                        <%= options_for_select({"This Week" => "Week","Last Two Weeks" => "2 Weeks","This Month" => "Month",
                        "Last Two Months" => "2 Months","Last 3 Months" => "3 Months","Last 6 Months" => "6 Months","This Year" => "Year"},
                        params[:duration]) %>
                    </select>
                    Data for total no. of
                    <select name="type" id="select1" class="select01">
                        <%= options_for_select(["Registration","Activation","Login","Gender Grouping","Profile Picture Present"],params[:type]) %>
                    </select>
                </td>
            </tr>
        </table>
    </form>
    <br/>
    <div id="chartdiv" align="center">
    </div>
    <script type="text/javascript">
       $(document).ready(function(){
    	<% if session[:type] == "Registration" or session[:type] == "Activation" or session[:type] == "Login" %>
        var chart = new FusionCharts("/Charts/FCF_MSColumn3D.swf", "ChartId", "800", "450");
		<% else %>
		var chart = new FusionCharts("/Charts/FCF_Pie3D.swf", "ChartId", "800", "450");
		<% end %>
        chart.setDataURL("/admin/members/get_xml");
        chart.render("chartdiv");
        
        $('select').change(function(){
            $('#form1').submit();
        })
         });
    </script>
</div>
<!-- Container End -->
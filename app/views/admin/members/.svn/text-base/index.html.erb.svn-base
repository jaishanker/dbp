    <div id="chartdiv" align="center">
    </div>
    <div class="demo_jui">
        <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
            <thead>
                <tr class="dataTable">
                    <th>
                        User Name
                    </th>
                    <th>
                        Joining Date
                    </th>
                    <th>
                        Status 
                    </th>
                    <th>
                        Belt
                    </th>
                    <th>
                        Designs Uploaded
                    </th>
                    <th>
                        Materials Requested
                    </th>
                    <th>
                        Points Earned
                    </th>
                    <th>
                        Following 
                    </th>
                    <th>
                        Followers
                    </th>
                    <th>
                        Member of Groups 
                    </th>
                    <th>
                        Total Posts 
                    </th>
                    <th>
                        Points Redeemed
                    </th>
                    <th>
                        Abuse if Any
                    </th>
                </tr>
            </thead>
            <tbody>
                <% unless @user.length == 0 %>
                <% @user.each do |l| %>
                <tr class="dataTable">
                    <td>
                        <%= link_to  get_name(l.login) ,:controller=>"admin/members", :action => :report,:id => l.id %>
                    </td>
                    <td>
                        <%= l.created_at.strftime("%d %b %Y") %>
                    </td>
                    <td>
                        <%= get_user_status(l.status) %>
                    </td>
                    <td align="center">
                        <span class ="<%= get_class(l.expertise_points) %>"></span>
                    </td>
                    <td align="center">
                        <%= l.designs.length %>
                    </td>
                    <td>
                        <%= l.learning_requests.length %>
                    </td>
                    <td>
                        <%= l.points.nil? ? 0 : l.points %>
                    </td>
                    <td>
                        <%= l.followings.length %>
                    </td>
                    <td>
                        <%= l.followers.length %>
                    </td>
                    <td>
                        <%= l.groups.length %>
                    </td>
                    <td>
                        <%= l.posts.length %>
                    </td>
                    <td>
                       <%= @redeem_points[l.id] || 0 %>
                    </td>
                    <td>
                        <%= l.report_abuses.length %>
                    </td>
                </tr>
                <% end %>
                <% end %>
            </tbody>
        </table>
        <br/>
        <div style ="float:right">
            <%= will_paginate @user %>
        </div>
    </div>

<!-- Container Start -->
<div class="content">
    <%= render :partial => "top_nav" %>
    <h1>Banners - Generic Report</h1>
    <form id="form1" name="form1" method="post" action="">
        <table border="0" cellpadding="5" cellspacing="0" id="mytable01">
            <tr>
                <td colspan="2">
                    <ul class="admtot">
                        <li>
                            Total Banners:&nbsp;<%= @banner.count %>
                        </li>
                    </ul>
                </td>
            </tr>
        </table>
    </form>
    <p class = "clear"/>
    <div id="chartdiv" align="center">
    </div>
    <div class="demo_jui">
        <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
            <thead>
                <tr class="dataTable">
                    <th width="15%">
                        Banner Name
                    </th>
                    <th width="15%">
                        Banner Type
                    </th>
					 <th width="15%">
                        Banner Position
                    </th>
                    <th width="15%">
                        Page
                    </th>
                    <th width="10%">
                        Date Created
                    </th>
                    <th width="10%">
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                <% unless @banner.length == 0 %>
                <% @banner.each do |b| %>
                <tr class="dataTable">
                    <td>
                    	<% if b.banner_type == "Main"%>
                    	<a id="href_<%= b.id%>" onclick="return hs.htmlExpand(this, { objectType:'ajax',outlineType:'rounded-white',width:1005,height:325  },'Banner View' )" href="/admin/banner/view/<%=b.id%>">  <%= get_name b.name %></a>
						<% else %>
						<%= get_name b.name %>
						<% end %>
                    </td>
                    <td>
                        <%= b.banner_type %>
                    </td>
					 <td>
                        <%= b.banner_position %>
                    </td>
                    <td>
                        <%= b.banner_page.nil? ? "All" : b.banner_page %>
                    </td>
                    <td>
                        <%= b.created_at.strftime("%d %b %Y") %>
                    </td>
                    <td align="center">
                        <label>
                            <%= radio_button_tag "bannerCentral#{b.id}","enabled",b.status.to_i == 1,:onclick => remote_function(:url => {:controller => "admin/banner",:action => "update_status",:id => b.id,:status => 1}) %>Active
                        </label>
                        <label>
                            <%= radio_button_tag "bannerCentral#{b.id}","disabled",b.status.to_i == 0,:onclick => remote_function(:url => {:controller => "admin/banner",:action => "update_status",:id => b.id,:status => 0}) %>Deactive
                        </label>
                    </td>
				</tr>
                <% end %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<!-- Container End -->

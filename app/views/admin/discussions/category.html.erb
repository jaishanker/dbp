<!-- Container Start -->
<div class="content">
    <%= render :partial => "top_nav" %>
    <h1>Discussion Lounge - Manage Category<span class="fright">Total Category:&nbsp;<%= @categories.length %></span></h1>
    <table border="0" cellpadding="5" cellspacing="0" id="mytable01">
        <tr>
            <td>
                <ul class="admtot">
                    <li>
                        Total Category:&nbsp;<%= @category_count %>
                    </li>
                    <li>
                        Total Sub Category:&nbsp;<%= @sub_category_count %>
                    </li>
                    <li>
                        Total Topics:&nbsp;<%= @topics_count %>
                    </li>
                    <li>
                        Total Posts:&nbsp;<%= @posts_count %>
                    </li>
                </ul>
            </td>
        </tr>
        <tr>
            <td>
            <div id = "error">
            </div>
        </tr>
        <tr>
            <td>
                <% remote_form_for(@discussion_category, :url => "/admin/discussions/category_create", :before => "$('#spinner').show();", :complete => "$('#spinner').hide();") do |f| %>
                Create Category&nbsp;<%= f.text_field :name,:class => "inputtxt01" %>
                <%= f.submit "Create",:class => "grnbtn02" %>
                <%= image_tag("loading.gif",:align => 'absmiddle',:border=> 0,:id => "spinner",:style=>"display:none; width: 20px;height:20px; margin-top: 0px;" ) %>
                <% end %>
            </td>
        </tr>
    </table>
    <br/>
    <form id="form1" name="form1" method="post" action="">
        <div class="demo_jui">
            <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
                <thead>
                    <tr class="dataTable">
                        <th width="24%">
                            Category Name
                        </th>
                        <th width="9%">
                            Date
                        </th>
                        <th width="8%">
                            Action
                        </th>
                        <th width="20%">
                            Status
                            <br/>
                            Active / Inactive
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% unless @categories.length == 0 %>
                    <% @categories.each do |c| %>
                    <tr class="dataTable">
                        <td>
                            <a href="#"><%= get_name(c.name) %>&nbsp;(<%= c.sub_categories.length %>)</a>
                        </td>
                        <td>
                            <%= c.created_at.strftime("%d %b %Y") %>
                        </td>
                        <td align="center">
                            <label>
                                <a id="edit_cat_href_<%= c.id%>" onclick="return hs.htmlExpand(this, { objectType:'ajax',outlineType:'rounded-white',width:500,height:225  },'Edit Category' )" href="/admin_base/edit_category/<%=c.id%>">Edit</a>
                            </label>
                            &nbsp;|&nbsp;
                            <label>
                                <%= link_to "Delete",{:controller => "admin/discussions",:action => "delete_category",:id => c.id} ,{:confirm => "are you sure you whnt to delete this category ?"} %>
                            </label>
                        </td>
                        <td align="center">
                            <label>
                                <%= radio_button_tag "discussion#{c.id}","enabled", c.status.to_i == 1 ,:onclick => remote_function(:url => {:controller => "admin/discussions",:action => "update_cat_status",:id => c.id,:status => 1}) %>Active
                            </label>
                            <label>
                                <%= radio_button_tag "discussion#{c.id}","disabled",c.status.to_i == 0,:onclick => remote_function(:url => {:controller => "admin/discussions",:action => "update_cat_status",:id => c.id,:status => 0}) %>Deactive
                            </label>
                        </td>
                    </tr>
                    <% end %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </form>
</div>
<!-- Container End -->

<script type="text/javascript">
          function toggleCommentDiv_l(divid){
            $('#learning_share_'+divid).hide();
            $('#learning_favorite_'+divid).hide();
            $('#learning_comment_'+divid).slideToggle();
          }
          function toggleShareDiv_l(divid){
            $('#learning_comment_'+divid).hide();
            $('#learning_favorite_'+divid).hide();
            $('#learning_share_'+divid).slideToggle();
          }
          function toggleFavoriteDiv_l(divid){
            $('#learning_comment_'+divid).hide();
            $('#learning_share_'+divid).hide();
            $('#learning_favorite_'+divid).slideToggle();
          }
          function checkFollowings(){
        <%if logged_in?%>
          <%if current_user.following_by_type('User').empty?%>
                show_notice('You are not following anybody yet','error')
                return false;
          <%end%>
        <%end%>
          }
          function checkFollowers(){
        <%if logged_in?%>
          <%if current_user.followers.empty?%>
                show_notice('You dont have any followers yet','error')
                return false;
          <%end%>
        <%end%>
          }
</script>
<div class="twocol">
    <div class="viewcomm">
        <p class="views">
        </p>
        <p class="icolink">
            <%= get_view_count(l.view_count) %>
        </p>
        <p class="comments">
        </p>
        <p class="icolink">
            <%length = l.comments.length %>
            <%if length == 1 %>
            <%c_name = "comment" %>
            <%else %>
            <%c_name = "comments" %>
            <%end %>
            <%= link_to  "#{length}&nbsp;#{c_name}" ,:controller=>:learnings, :action => :learning,:permalink => l.permalink %>
        </p>
        <p class="favorites">
        </p>
        <p class="icolink">
            <%fav = l.favoriting_users.size %>
            <%if fav == 1 %>
            <%f_name = "favorite" %>
            <%else %>
            <%f_name = "favorites" %>
            <%end %>
            <%=fav %>&nbsp;<%=f_name %>
        </p>
        <p class="clear">
        </p>
    </div>
    <div class="c1">
        <p class="boximg">
            <%= get_image(l,'learning','medium') %>
        </p>
    </div>
    <div class="c2">
        <p class="head01">
            <%= link_to get_name(l.title),:controller=>:learnings, :action => :learning,:permalink => l.permalink %>
        </p>
        <p class="txtblue fleft">
            - by&nbsp;
        </p>
        <p class="txtblue fleft">
            <%= link_to get_name(l.user.login,8),my_page_path(:user_id => l.user.id) %>
        </p>
        <p class="txtblue fleft">
            ,<%= time_ago(l.created_at) %>
        </p>
        <div class="rating" id="rated_<%=l.id%>" style="">
            <% @learning = l %>
            <%=render :partial=>"/learnings/star_rate" ,:locals => {:l => @learning },:inline=>true %>
        </div>
        <p class="clear padbot5">
        </p>
        <p class="txt">
            <%=h get_name(l.description,250) %>
        </p>
        <p class="clear">
        </p>
        <% unless l.tags.nil? %>
        <% unless l.tags.length == 0 %>
        <p class="tags">
            <% l.tags.split(',').each do |tag| %>
            <%= link_to tag , :controller => "learnings", :action => "index" , :tag => tag, :tagable_id => l.id %><%= "," unless tag == l.tags.split(',').last %>
            <% end %>
        </p>
        <% end %>
        <% end %>
    </div>
    <p class="clear">
    </p>
    <div class="iconComment brdBotDot01">
        <div class = "comlinkpadd">
            <div class = "fleft">
                <p class="postcom">
                </p>
                <p class="icolink">
                    <a href="javascript:void(0);" class="blacklink" onclick="toggleCommentDiv_l(<%=l.id%>)">Post Comment</a>
                </p>
                <p class="share">
                </p>
                <p class="icolink">
                    <a href="javascript:void(0);" class="blacklink" onclick="toggleShareDiv_l(<%=l.id%>)">Share</a>
                </p>
                <!--
                <p class="sameuser"></p>
                <p class="icolink">
                <a href="#" class="blacklink">Show Similar Content</a>
                </p>
                -->
                <p class="favorites">
                </p>
                <p class="icolink">
                    <a href="javascript:void(0);" class="blacklink" onclick="toggleFavoriteDiv_l(<%=l.id%>)">Add to Favorites</a>
                </p>
            </div>
        </div>
    </div>
</div>
<!-- Comment form starts -->
<div id = "learning_comment_<%=l.id%>" style ="display:none;">
    <div id="ComContent">
        <%if logged_in? %>
        <div class="brd">
            <%@type="Learning" %>
            <% form_remote_tag :url=>{:controller=>'comment',:action=>'post_comment',:id=>l.id,:type=>@type} ,:html=>{:name=>'postcomment'} , :before => "$('#spinner').show();",:complete => "$('#spinner').hide();" do %>
            <%= text_area_tag 'comment_text', nil, :class => 'inputtxt' %>
            <%= submit_tag 'Post' ,:class=>'grnbtn' %>
            <%= image_tag("loading.gif",:align => 'absmiddle',:border=> 0,:id => "spinner",:style=>"display:none; width: 20px; margin-top: 0px;" ) %>
            <%end %>
        </div>
        <%else %>
        <div class="brd">
            Please login to post comment.
        </div>
        <%end %>
    </div>
</div>
<!-- comment form ends --><!-- sharing form -->
<div id = "learning_share_<%=l.id%>" style ="display:none;">
    <div id="ComContent">
        <%if logged_in? %>
        <div class="brd" style="height:190px;">
            <div class="group iconComment">
                <div class="fourCol">
                    <p class="c7">
                        <span class="followingIcon"></span>
                        <span class="black">Share with People You Follow</span>
                    </p>
                    <% form_remote_tag :url => {:controller=> "share",:action => 'share_with_followings'} do -%>
                    <p class="c8">
                        <%=hidden_field_tag 'id', l.id %>
                        <%=hidden_field_tag 'type', @type %>
                        <!-- <%=check_box_tag 'all_following', '1', false, :class => 'inputcheck'%>All Followings --><span><%= submit_tag 'Share' , :class=>"grnbtn01" %></span>
                    </p>
                    <%end %>
                    <p class="frm_brd01">
                    </p>
                </div>
                <div class="fourCol">
                    <p class="c7">
                        <span class="followersIcon"></span>
                        <span class="black">Share with Followers</span>
                    </p>
                    <% form_remote_tag :url => "/share/share_with_followers" do -%>
                    <p class="c8">
                        <%=hidden_field_tag 'id', l.id %>
                        <%=hidden_field_tag 'type', @type %>
                        <!--  <%=check_box_tag 'all_followers', '1', false, :class => 'inputcheck'%>All Followers --><span><%= submit_tag 'Share' , :class=>"grnbtn01" %></span>
                    </p>
                    <%end %>
                    <p class="frm_brd01">
                    </p>
                </div>
                <div class="fourCol">
                    <p class="c7">
                        <span class="othernetwork"></span>
                        <span class="black">Share with Other Network</span>
                    </p>
                    <p class="c8" style="margin-top:-10px">
                        <a target = "_blank" href="http://www.facebook.com/sharer.php?u=http://<%=request.host_with_port%>/learnings/learning/<%=l.id%>">Facebook Share</a>
                        <a target = "_blank" href="http://promote.orkut.com/preview?nt=orkut.com&du=http://<%=request.host_with_port%>/learnings/learning/<%=l.id%>&tt=<%=l.title%>&cn=<%= h get_name(l.description,250) %>&tn=<%=get_image(l,'learning','medium')%>">Orkut Share</a>
                        <a target = "_blank" href="http://twitter.com/home?status=<%=l.title%> http://<%=request.host_with_port%>/learnings/learning/<%=l.id%>" title="">Share on Twitter</a>
                    </p>
                </div>
            </div>
        </div>
        <%else %>
        <div class="brd" style="">
            Please login to share with Followings and Followers.
        </div>
        <%end %>
    </div>
</div>
<!-- sharing form end -->
<div id = "learning_favorite_<%=l.id%>" style ="display:none;">
    <div id="ComContent">
        <% if logged_in? %>
        <%if current_user.has_favorite?(l) %>
        <div class="brd">
            You have already favorited this learning material.
        </div>
        <%else %>
        <div class="brd">
            <form action="postcomment.jsp" method="get" name="postcomment">
                <p style="float:left;">
                    Do you want to Add this Learning to your Favorites?
                </p>
                <p style="float:left;">
                    <label>
                        <input type="radio" name="RadioGroup1" value="yes" id="RadioGroup1_0"<% if logged_in? %><%unless current_user.has_favorite?(l) %>onclick="<%= remote_function :url =>{:controller => "share", :action => :add_to_favorite, :id => l.id ,:type=>@type} %>" <%end %><%if current_user.has_favorite?(l) %>checked="checked" <%end %><%end %>/>Yes
                    </label>
                    <label>
                        <input type="radio" name="RadioGroup1" value="yes" id="RadioGroup1_1"<% if logged_in? %><%if current_user.has_favorite?(l) %>onclick="<%= remote_function :url =>{:controller => "share", :action => :remove_from_favorite, :id => l.id ,:type=>@type} %>" <%end %><%unless current_user.has_favorite?(l) %>checked="checked" <%end %><%end %>/>No
                    </label>
                </p>
            </form>
            <div id ="success_msg_<%=l.id%>">
            </div>
        </div>
        <%end %>
        <%else %>
        <div class="brd">
            Please login to add as Favorites.
        </div>
        <%end %>
    </div>
</div>

    <div class="cBoxhead">
        <p class="headtxt">
            Top Rated Tutorials
        </p>
        <%= link_to "more +",learnings_path(:hot_material=>true),:class=>"more" %>
    </div>
    <div class="cBoxcontainer">
        <ul class="recendesignpost">
            <%unless @top_rated_materials.size == 0 %>
            <%@top_rated_materials.first(5).each do |l| %>
            <li>
                <div class="fleft" id="star">
                    <%= link_to get_name(l.title ,50),:controller=>:learnings, :action => :learning,:permalink => l.permalink %>
                    <%= get_view_count(l.view_count) %>|<%= l.comments.length %>comments |<%= l.favoriting_users.size %>Favs
                </div>
                <div id="rated_right<%=l.id%>">
                    <% @learning = l %>
                    <%=render :partial=>"/learnings/star_rate" ,:locals => {:d => @learning },:inline=>true %>
                </div>
            </li>
            <p class="clear">
            </p>
            <%end %>
            <%else %>
            No top rated materials found.<%end %>
        </ul>
        <p class="spacer01">
        </p>
    </div>
</div>

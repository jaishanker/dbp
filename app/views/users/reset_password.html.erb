<!-- Container Start -->
<div class="content">
  <!-- Left Col Start -->
  <div class="c1">
    <!-- Set Priority File Include -->
    <div class="clear">
    </div>
    <!-- Blue Box start -->
    <div class="Blue4pxbox">
      <code>
        $(this).corner();
      </code>
      <div class="whiteBoxContent">
        <div class="pageheading">
          <div class="c1 head14">
            <strong>Reset Your Password Here</strong>
          </div>
        </div>
         <p class="clear brdBot01"></p>
									<p class="spacer05"></p>
        <% form_remote_tag :url => '/users/change_password' , :before => "$('#spinner').show();",:complete => "$('#spinner').hide();" do -%>
          <%=hidden_field "user","id", :value =>@user.user_id %>
          <%=hidden_field "user","key", :value =>@user.key %>
          <div class="proform">
            <div class="proform_l">
              <div class="formrow">
                <p class="c1">New Password:</p>
                <p class="c2"><%= password_field_tag(:password,nil, :class => "proinput")%>
                  <br>
                  <span id="new_password_error"></span>
                </p>
              </div>
              <div class="formrow">
                <p class="c1">Confirm Password:</p>
                <p class="c2"><%= password_field_tag(:password_confirmation,nil, :class => "proinput")%>
                  <br>
                  <span id="password_confirmation_error"></span>
                </p>
              </div>
            </div>
          </div>
          <div class="proform">
            <div class="proform_l">
              <div class="formrow">
                <p class="c1">&nbsp;</p>
                <p class="c2">
                  <%= submit_tag 'Submit' , :class => "grnbtn01"%>
                  <%= image_tag("loading.gif",:align => 'absmiddle',:border=> 0,:id => "spinner",:style=>"display:none; width: 20px; margin-top: 0px;" ) %>
                </p>
              </div>
            </div>
          </div>
        <%end%>
        <p class="spacer01"></p>

      </div>
    </div>
  </div>
</div>
<!-- Container Start -->
<div class="content">
  <!-- Left Col Start -->
  <div class="c1">
    <!-- Blue Box start -->
    <div class="Blue4pxbox"><code>$(this).corner();</code>
      <div class="whiteBoxContent">
        <!-- Section Head start -->
        <div class="pageheading">
          <div class="c1 head14">
                <%if @search_text%>
                    Search results for "<%= h @search_text%>"
                 <%else%>
                    Active Members
                 <%end%>
          </div>
          <div class="c5 total">
            <%@type="users/experts"%>
            <%=render :partial=>"/designs/search"%>
          <!-- 
            <div id="search_box">
              <form action="/users/experts" method="post" id="search_form">
                <input type="text" class="swap_value" value="Search" id="s" name="search">
                <input type="image" height="20" width="18" title="Search" alt="Search" id="go" src="../images/btn_search_box.gif">
              </form>
            </div>
            -->
          </div>
        </div>
        <p class="clear brdBot01"></p>
        <div class="pageheading">
          <p class="c1 total">
             <%if @search_text%>
                    <a>Active Members Found : <%=@members.total_entries%></a>
             <%else%>
                    <a>Total Active Members : <%=@members.total_entries%></a>
             <%end%>
          </p>
          <p class="c3"><span id="pagination" class="pagination01"></span></p>
        </div>
       <%if @no_of_pages >= 2%>
         <script type="text/javascript">
            $(document).ready(function(){
                    $(function(){
                        $("#pagination").paginate({ 
                            <%if @search_text%>
                               href : '/users/experts?search=<%=@search_text%>&page=',                 
                            <%else%>
                              href : '/users/experts?page=',   
                            <%end%>
                            count: <%=@no_of_pages%>,
                            start: <%=params[:page] || 1%>,
                            display: 5,
                            border: false,
                            text_color: '',
                            background_color: '',
                            text_hover_color: '',
                            background_hover_color: ''
                        });
                    });
                     });
                </script>
         <%end%>
        <p class="clear brdBot01"></p>
        <!-- Section Head End -->

        <!-- Two col comment start -->

        <%unless @members.empty?%>
          <%= render :partial => "/home/member" , :collection => @members%>
        <%else%>
          No such experts.
        <%end%>
         
        <p class="clear"></p>

      </div>
    </div>
    <!-- Blue Box end -->
    <div class="spacer"></div>
  </div>
  <!-- Left Col End -->
  <!-- Right Col Start -->
  <div class="c2 rightcol">
    <%if logged_in?%>
    <%if @user == current_user%>
      <%= render :partial => "profiles/my_page_links"%>
    <%else%>
      <%= render :partial => "profiles/member_page_links"%>
    <%end%>
    <%else%>
        <!-- Expert Div start -->
        <%=render :partial=>"home/experts.html.erb" %>
        <!-- Expert Div end -->
        <div class="clear">
        </div>
        <!-- Active Member Div start -->
        <!-- Active Member Div end -->
        <div class="clear">
        </div>
        <!-- Activity Stream Div start -->
        <div class="actstream">
                    <div class="orangehead">
                      <p class="headtxt">Activity Stream</p>
                      <%= link_to "more +",recent_activity_path(),:class=>"more"%>
                    </div>
                    <p class="orgarrow"></p>
                  <%#= render :partial => 'activity_streams/activity_stream', :collection => @activities%>
                  <%unless @activities.empty?%>
                         <%=render :partial=>"home/activity_stream", :collection => @activities %>
                   <%else%>
                          No Recent activity found.
                  <%end%>
        </div>
    <%end%>
    <!-- My Page Links Include
    <script type="text/JavaScript" src="../scripts/MyPage_links.js"></script>  -->
  </div>
  <!-- Right Col End -->
</div>
<!-- Container End -->
<div class="clear"></div>
